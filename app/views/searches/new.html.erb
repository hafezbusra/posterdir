<<div class="ruby-demo">
  <div class="site-background"></div>
    <div class="search-demo__content">

      <%# Header %>
        <div class="search-demo__header d-flex justify-content-center" style="margin-top:-150px;">

        <%= form_for @search, style: "width:800px;" do |s| %>
        <div class="search-demo__headings">
          <h1 class="search-demo__title">Advanced Search</h1>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Keywords</label>
            <%= s.text_field :keywords, class: "form-control" %>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Project ID</label>
            <%= s.text_field :p_id, class: "form-control" %>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Student ID</label>
            <%= s.text_field :student_id, class: "form-control" %>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Student Name</label>
            <%= s.text_field :student_name, class: "form-control" %>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Supervisor</label>
            <%= s.select :supervisor_name, options_for_select(@supervisors), include_blank: :true, class:"form-control"  %>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Moderator</label>
            <%= s.select :moderator_name, options_for_select(@moderators), include_blank: :true, class:"form-control"   %>
        </div>
         <%= link_to 'Back', fyp_posters_path, class: "btn btn-info" %>
        <%= submit_tag("Search", class: "btn btn-primary") %>
        </form>
        <% end %>
      </div>

</div>
